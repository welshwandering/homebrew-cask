{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "automergeType": "pr",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Formula/.+\\.rb$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+url \"[^\"]*?(?<currentValue>v[\\d.]+)[^\"]*\""
      ]
    }
  ]
}
